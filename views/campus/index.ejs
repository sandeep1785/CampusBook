
<% include ../partial/header %>


<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1>WELCOME TO UIET PICBOOK !</h1>
        <p>This is an Official website for Uiet Pictures. Unseen pictures of our loved college</p>
        <p>
            <a class="btn btn-primary" href="/campus/new">Add New Pictures</a>
        </p>
    </div>
</header>

<div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Site of Uiet</h3>
        </div>
</div>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
         <% campus.forEach(function(camp){ %>
        
        <div class ="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>" alt="no img">
                <div class="caption">
                    <h2><%= camp.name %></h2>  
                </div>
                <p>
                    <a href="/campus/<%= camp._id %> " class="btn btn-primary">More Info</a>
                </p>
            </div>
       

        </div>
    <% }); %>
    </div>


</div>


<% include ../partial/footer %>

